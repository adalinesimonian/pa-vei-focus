{
  "manifest_version": 3,
  "name": "På Vei - Input Focus Improvements",
  "version": "1.1.0",

  "browser_specific_settings": {
    "gecko": {
      "id": "{7c384cf6-134b-4625-98b0-1ae4428c71e0}",
      "strict_min_version": "120.0"
    }
  },

  "description": "Improves the focus handling of input fields on the På Vei and other Cappelen Damm course websites.",
  "icons": {
    "48": "icon.svg"
  },

  "host_permissions": ["https://*.cappelendamm.no/*"],

  "content_scripts": [
    {
      "matches": ["https://*.cappelendamm.no/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
